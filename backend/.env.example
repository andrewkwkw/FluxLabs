# Environment Configuration for FluxLabs Backend
# Copy this to .env and fill in your actual values

# Environment
NODE_ENV=production

# Server
PORT=3001
SECRET_KEY=your-super-secret-jwt-key-min-32-chars-change-this-NOW

# Database
DATABASE_PATH=./fluxlabs.db

# CORS - comma-separated list of allowed origins
# For production: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# For development: ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,http://127.0.0.1:3001

# N8N Webhook Configuration
N8N_WEBHOOK_URL=https://n8n.avatara.id/webhook/fluxlabs

# Callback URL - where N8N sends the result back
# For production: CALLBACK_URL=https://yourdomain.com/api/webhook/n8n/callback
# For local: CALLBACK_URL=http://localhost:3001/api/webhook/n8n/callback
CALLBACK_URL=http://localhost:3001/api/webhook/n8n/callback

# Logging
LOG_LEVEL=info

# Mock mode (set to true to simulate N8N calls)
MOCK=false
